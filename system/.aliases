#!/bin/zsh

# pwetty colors
alias ls='ls --color=always'

# Basic ls aliases
alias l='ls -CF'
alias ll='ls -alF'
alias lsa='ls -A'
alias lsh='ls -alh'

# When using sudo, use alias expansion (otherwise sudo ignores your aliases)
alias sudo=$'sudo '

# Other sudo aliases
alias s='sudo '
alias se='sudoedit'
alias please='sudo'

# Vim aliases
alias v='vim'
alias svim='sudo vim'
alias sv='sudo vim'

# df aliases
alias df='df -H'

# Basic remove aliases
alias rm='rm -rf'

# Emacs alias
alias emacs='emacsclient -nc'

# htop instead of top
alias top='htop'

# Refresh shell
alias rfssh='source ~/.zshrc'

# System info aliases
# Free memory info
alias meminfo='free -m -l -t'

# get GPU ram on desktop / laptop
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'

# Git aliases
alias mainlog="git log --all --decorate --oneline --graph"


# Umlet alias
if [ -f /opt/umlet/umlet.jar ]; then
    alias umlet="java -jar /opt/umlet/umlet.jar"
fi


# Docker Aliases
alias dlsi='docker images'
alias dockerflush='docker system prune'
