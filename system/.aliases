#!/bin/zsh

# pwetty colors
alias ls='ls --color=always'

# Basic ls aliases
alias l='ls -CF'
alias ll='ls -alF'
alias lsa='ls -A'
alias lsh='ls -alh'

# When using sudo, use alias expansion (otherwise sudo ignores your aliases)
alias sudo='sudo '

# Other sudo aliases
alias s='sudo '
alias se='sudoedit'
alias please='sudo'

# Vim aliases
alias v='vim'
alias svim='sudo vim'
alias sv='sudo vim'

# df aliases
alias df='df -H'

# Basic remove aliases
alias rm='rm -rf'

# Emacs alias
alias emacs='emacsclient -nc'

# htop instead of top
alias top='htop'

# Refresh shell
alias rfssh='source ~/.zshrc'

# System info aliases
# Free memory info
alias meminfo='free -m -l -t'

# get GPU ram on desktop / laptop
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'

# Git aliases 
alias mainlog="git log --all --decorate --oneline --graph"

alias chromecast="mkchromecast â€“y [youtube-URL] --video"


# Umlet alias
if [ -f /opt/umlet/umlet.jar ]; then	
    alias umlet="java -jar /opt/umlet/umlet.jar"
fi

# Old antlr aliases
if [ -f "/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH" ]; then	
    alias antlr='java -Xmx500M -cp "/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH" org.antlr.v4.Tool'
    alias grun='java -Xmx500M -cp "/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH" org.antlr.v4.gui.TestRig'
fi

alias vpn-home='openvpn --config vpn/aegis.ovpn'

# Because eagle is garbage
alias eagle='LIBGL_ALWAYS_SOFTWARE=1 /opt/eagle/eagle'

# For spotify lyrics and controller
alias song='spotify-lyrics'

eval $(thefuck --alias fuck)
eval $(thefuck --alias FUCK)
eval $(thefuck --alias dammit)
eval $(thefuck --alias shit)
eval $(thefuck --alias hell)
eval $(thefuck --alias endme)
