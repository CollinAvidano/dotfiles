# Path additions
# add i3 specific scripts such as lock, toggle touchpad and others
export PATH="$PATH:$HOME/.config/i3/"

export PATH="$PATH:$HOME/bin:$HOME/.local/bin"
export PATH="$PATH:/bin:/sbin"
export PATH="$PATH:/opt/blender"

export PATH="$PATH:/opt/eagle"
export PATH="$PATH:/opt/logic" # senale logic analyzer
export PATH="$PATH:/opt/cubemx"

export PATH="$PATH:/opt/multimc"
export PATH="$PATH:/opt/evelauncher"

export PATH="$PATH:$HOME/.config/spicetify/spicetify-cli"

export PATH="$PATH:$HOME/.cargo/bin"
export PATH="$PATH:/opt/quartus/quartus/bin"
export PATH="$PATH:/opt/android-studio/bin"

export PYTHONPATH="$PYTHONPATH:/usr/local/lib/python3.8/site-packages"
export PYTHONPATH="$PYTHONPATH:/usr/local/lib/python/dist-packages/gnuradio/iio"

# React Native Specific
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
