# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "ipv6"
order += "battery all"
order += "load"
#order += "cpu_usage" 
order += "cpu_temperature 0" 
order += "memory"
order += "disk /"
order += "tztime local_it"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}



tztime local_it {
        format = "IT Time %Y-%m-%d %H:%M:%S"
}

tztime local {
        format = "%m-%d-%Y %I:%M%P"
}

load {
        format = "Load:%1min"
}

cpu_usage {
    format = "all: %usage CPU_0: %cpu0 CPU_1: %cpu1 CPU_2: %cpu2 CPU_3: %cpu3 CPU_4: %cpu4 CPU_5: %cpu5 CPU_6: %cpu6 CPU_7: %cpu7"
}

cpu_temperature 0 {
        format = "T_cpu: %degrees °C"
        path = "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon6/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "DF:%avail"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
}
